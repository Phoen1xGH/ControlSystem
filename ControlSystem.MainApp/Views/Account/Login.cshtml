@model ControlSystem.Domain.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Вход";

    var modelErrors = ViewData.ModelState.Values
                       .SelectMany(v => v.Errors)
                       .Where(e => !string.IsNullOrEmpty(e.ErrorMessage))
                       .Select(e => e.ErrorMessage)
                       .ToList();
}

<div class="container text-center">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Login" method="post" class="form-signin mx-auto" style="max-width: 400px;">
        @if (modelErrors.Any())
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in modelErrors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
        <div>
            <div class="form-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Введите логин" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Войти</button>
        </div>
    </form>
</div>
