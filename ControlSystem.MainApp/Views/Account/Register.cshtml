@model ControlSystem.Domain.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";

    var modelErrors = ViewData.ModelState.Values
                       .SelectMany(v => v.Errors)
                       .Where(e => !string.IsNullOrEmpty(e.ErrorMessage))
                       .Select(e => e.ErrorMessage)
                       .ToList();
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Register" method="post" class="form-signin mx-auto" style="max-width: 400px;">
        @if (modelErrors.Any())
        {
                <div class="alert alert-danger">
                    <ul>
                    @foreach (var error in modelErrors)
                    {
                                <li>@error</li>
                    }
                    </ul>
                </div>
        }
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div>
            <div class="form-group mb-3">
                <input asp-for="Name" class="form-control" placeholder="Введите имя" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Подтвердите пароль" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Email" class="form-control" placeholder="Введите адрес электронной почты" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </div>
    </form>
</div>
