@model ControlSystem.Domain.ViewModels.RegisterViewModel

<link rel="stylesheet" href="~/css/register.css"/>

<div class="outer-div">
    <div class="container">
        <h2>Регистрация</h2>

        <form asp-controller="Account" asp-action="Register" method="post" class="form-signin" style="max-width: 400px;">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div>
                <div class="form-group mb-3 relative-block">
                    <input class="input" asp-for="Name" class="form-control" placeholder="" />
                    <label class="placeholder">Имя</label>
                    <span asp-validation-for="Name" class="text-danger mtop-bold"></span>
                </div>

                <div class="form-group mb-3 relative-block">
                    <input class="input" asp-for="Password" type="password" class="form-control" placeholder="" />
                    <label class="placeholder">Пароль</label>
                    <span asp-validation-for="Password" class="text-danger mtop-bold"></span>
                </div>

                <div class="form-group mb-3 relative-block">
                    <input class="input" asp-for="PasswordConfirm" type="password" class="form-control" placeholder="" />
                    <label class="placeholder">Подтвердите пароль</label>
                    <span asp-validation-for="PasswordConfirm" class="text-danger mtop-bold"></span>
                </div>

                <div class="form-group mb-3 relative-block">
                    <input class="input" asp-for="Email" class="form-control" placeholder="" />
                    <label class="placeholder">Адрес электронной почты</label>
                    <span asp-validation-for="Email" class="text-danger mtop-bold"></span>
                </div>

                <button type="submit" class="btn-register">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>