<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControlSystem.MainApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlSystem.MainApp.styles.css" asp-append-version="true" />
    
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <style>
        #navbar {
            background-color: #3c414a; 
            border-color: #3c414a !important;
        }

        .dropdown-menu{
            background-color: #3c414a !important;
        }

        .dropdown-item{ 
            color: white !important;
        }

        .dropdown-item:hover {
            color: #50545c !important; /* Замените #yourHoverColor на ваш цвет для наведения */
        }

        .search-box {
            background: #2f3640;
            height: 35px;
            border-radius: 35px;
            padding: 8px;
            box-sizing: content-box;
            visibility: hidden;
            border: 1px solid transparent;
        }

        .search-btn {
            color: #15c118;
            float: right;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #2f3640;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: 0.4s;
        }

        .search-txt {
            border: none;
            background: none;
            outline: none;
            float: left;
            padding: 0;
            color: #d8d8d8;
            font-size: 16px;
            transition: 0.4s;
            line-height: 35px;
            width: 0px;
        }

        .search-box:hover > .search-txt {
            width: 240px;
            padding: 0 6px;
        }

        .search-box:hover {
            border: 1px solid #15c118;
        }

        .search-box:hover > .search-btn {
            background: white;
        }

    </style>
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ИСУЗБП</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(User.Identity.IsAuthenticated)
                        {
                            @*<li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="BPMNCharts" asp-action="GenerateForms">Сгенерировать бизнес-процесс</a>
                            </li>*@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Бизнес-процессы
                                </a>
                                <div class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="BPMNCharts" asp-action="GenerateForms">Генерация</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="BPMNCharts" asp-action="Modeler">Создание</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="BPMNCharts" asp-action="AllCharts">Мои диаграммы</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Workspace" asp-action="Workspaces">Задачи</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="LogOut">Выход</a>
                            </li>
                        }
                        else
                        {
                           <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="accountDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Аккаунт
                                </a>
                                <div class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
                                </div>
                            </li>
                        }
                    </ul>

                    <div class="search-box">
                        <input id="search-input" class="search-txt" type="text" placeholder="Введите текст">
                        <a class="search-btn" href="#">
                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512" fill="#15c118">
                                <path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" />
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @*<main role="main" class="pb-3 p-0">*@
            @RenderBody()
       @* </main>*@
    </div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ControlSystem.MainApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currentUrl = window.location.pathname;
        var searchBox = document.querySelector(".search-box");

        if (currentUrl.includes("Workspaces")) {
           searchBox.style.visibility = "visible";
        }
    });
</script>
