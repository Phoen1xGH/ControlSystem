    function handleKeyDown(event, id) {
        if (event.key === "Enter") {
            event.preventDefault();
            $(event.target).blur();
            var text = event.target.innerText.trim();
            

            if (text !== "") {
                createTicketV2(text, id);
                //console.log("Выполнить AJAX-запрос с текстом:", text);
            }
        }
